{
  "manifest_version": 3,
  "name": "Advanced Font Changer",
  "version": "1.0.0",
  "description": "Forces a chosen font from Google Fonts on all websites with category-based selection.",
  "icons": {
    "16": "afc.png",
    "32": "afc.png",
    "48": "afc.png",
    "128": "afc.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://fonts.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Font Changer"
  },
  "applications": {
    "gecko": {
      "id": "advanced-font-changer@example.com",
      "strict_min_version": "109.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
