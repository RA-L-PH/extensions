{
  "manifest_version": 3,
  "name": "GitHub Profile Styler for RA-L-PH",
  "version": "1.1",
  "description": "Applies a custom two-column layout and dark theme to the RA-L-PH GitHub profile page.",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/RA-L-PH",
        "https://github.com/RA-L-PH/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}
