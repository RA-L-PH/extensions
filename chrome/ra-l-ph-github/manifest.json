{
  "manifest_version": 3,
  "name": "GitHub Profile Styler",
  "version": "1.0",
  "description": "Customize the appearance of your GitHub profile page.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://github.com/RA-L-PH/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/RA-L-PH/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
