{
  "manifest_version": 3,
  "name": "Force Font Changer",
  "version": "1.0.0",
  "description": "Forces a chosen font on all websites by injecting a CSS override.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["force.css"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
  ,
  "web_accessible_resources": [
    {
      "resources": ["fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
